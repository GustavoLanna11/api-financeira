# Conexão com o banco de dados MongoDB
MONGO_URI=mongodb://127.0.0.1:27017/api-financeira
# Porta do servidor
PORT=4000

# Chaves das rotas Open Finance (formato clientAppId:apiKey)
OPEN_FINANCE_KEYS=client_app_001:minha-chave-bem-forte

# Cabeçalho usado pelo middleware (opcional, padrão é x-api-key)
API_KEY_HEADER=x-api-key

# Dados exibidos no endpoint /openfinance/institution (opcionais)
INSTITUTION_ID=fi_001
INSTITUTION_NAME=api-financeira
INSTITUTION_STATUS=true